package com.objectmaster.human;

public class Samurai extends Human{
	public Samurai() {
		this.health=200;
	}
	public void deathBlow(Human person) {
		person.health =0;
		this.health = this.health/2;
	}
	
	public void meditate() {
		this.health = this.health*2;
	}
	
	public void howMany() {
		this.health = this.health*2;
	}

	public int displayHealth() {
		return this.health;
		
	}
}
